{
  "name": "chat",
  "version": "3.0.0",
  "description": "eXo Chat",
  "repository": {
    "type": "git",
    "url": "https://github.com/exo-addons/chat-application"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack.dev.js --mode development --hot",
    "watch": "webpack --config webpack.dev.js --progress --colors --watch -d",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "build": "webpack --config webpack.prod.js -p"
  },
  "author": "eXo",
  "license": "LGPL",
  "devDependencies": {
    "axios": "^0.18.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.4.4",
    "babel-loader": "^7.1.4",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "connect-api-mocker": "^1.3.6",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-vue": "^4.5.0",
    "express": "^4.16.3",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^22.4.4",
    "jest-localstorage-mock": "^2.2.0",
    "jest-runner-eslint": "^0.5.0",
    "jest-vue-preprocessor": "^1.4.0",
    "jquery": "^3.3.1",
    "less": "^3.0.4",
    "less-loader": "^4.1.0",
    "vue": "^2.5.16",
    "vue-loader": "^14.2.2",
    "vue-template-compiler": "^2.5.16",
    "vue-test-utils": "^1.0.0-beta.11",
    "webpack": "^4.6.0",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3",
    "webpack-merge": "^4.1.2"
  },
  "dependencies": {
    "vue-cli": "^2.9.3",
    "vue-i18n": "^7.6.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "testMatch": [
          "<rootDir>/src/test/specs/**/*.js"
        ],
        "moduleNameMapper": {
          "^vue$": "vue/dist/vue.common.js"
        },
        "moduleFileExtensions": [
          "js",
          "vue"
        ],
        "modulePaths": [
          "node_modules",
          "src"
        ],
        "transform": {
          "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
          ".*\\.(vue)$": "<rootDir>/node_modules/jest-vue-preprocessor"
        },
        "roots": [
          "src"
        ],
        "setupFiles": [
          "<rootDir>/src/test/globals.js",
          "jest-localstorage-mock"
        ]
      },
      {
        "displayName": "lint",
        "runner": "jest-runner-eslint",
        "testMatch": [
          "<rootDir>/src/test/**/*.js"
        ]
      }
    ],
    "coverageDirectory": "<rootDir>/target/jest/coverage"
  }
}
