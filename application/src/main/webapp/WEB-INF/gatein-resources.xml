    <!-- TODO move to a common project -->
    <module>
        <name>vue</name>
        <script>
            <minify>false</minify>
            <path>/js/lib/vue.js</path>
        </script>
    </module>

    <portlet>
        <name>ChatApplication</name>
        <module>
            <script>
                <minify>false</minify>
                <path>/js/chat.bundle.js</path>
            </script>
            <depends>
                <module>vue</module>
            </depends>
            <depends>
                <module>jquery</module>
                <as>$</as>
            </depends>
            <depends>
                <module>jquery_cometd</module>
            </depends>
            <depends>
                <module>suggester</module>
            </depends>
            <depends>
                <module>iphoneStyleCheckbox</module>
            </depends>
            <depends>
                <module>filedrop</module>
            </depends>
            <depends>
                <module>CalDateTimePicker</module>
            </depends>
        </module>
    </portlet>

    <module>
        <name>filedrop</name>
        <script>
            <path>/js/lib/jquery.filedrop.js</path>
        </script>
        <depends>
            <module>jquery</module>
        </depends>
    </module>

</gatein-resources>
